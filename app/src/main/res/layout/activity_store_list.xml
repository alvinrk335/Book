<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.storepage.MainActivity">

        <TextView
            android:id="@+id/label_list_of_stores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List of Stores"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E3628"
            android:layout_marginStart="36dp"
            android:layout_marginTop="100dp"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Store 1: John Sandoe Books -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:cardElevation="4dp"
                card_view:cardCornerRadius="12dp"
                android:cardBackgroundColor="#D5FAD7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/johnsandoe_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/johnsandoe" />

                    <TextView
                        android:id="@+id/johnsandoe_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Sandoe Books"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/johnsandoe_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Blacklands Terrace, London SW3 2SP"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/star" />

                        <TextView
                            android:id="@+id/johnsandoe_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.8/5"
                            android:textSize="14sp"
                            android:paddingStart="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Store 2: Brick Lane Bookshop -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:cardElevation="4dp"
                card_view:cardCornerRadius="12dp"
                android:cardBackgroundColor="#D5FAD7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/bricklane_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bricklane" />

                    <TextView
                        android:id="@+id/bricklane_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brick Lane Bookshop"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/bricklane_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="166 Brick Lane, London E1 6RU"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/star" />

                        <TextView
                            android:id="@+id/bricklane_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4/5"
                            android:textSize="14sp"
                            android:paddingStart="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Store 3: The Marlow Bookshop -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:cardElevation="4dp"
                card_view:cardCornerRadius="12dp"
                android:cardBackgroundColor="#D5FAD7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/themarlow_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/themarlow" />

                    <TextView
                        android:id="@+id/themarlow_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Marlow Bookshop"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/themarlow_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22-24 Spittal St, Marlow SL7 1DB"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/star" />

                        <TextView
                            android:id="@+id/themarlow_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.2/5"
                            android:textSize="14sp"
                            android:paddingStart="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--        store 4:London Review Bookstore-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:cardElevation="4dp"
                card_view:cardCornerRadius="12dp"
                android:cardBackgroundColor="#D5FAD7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/londonreview_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/londonreview" />

                    <TextView
                        android:id="@+id/londonreview_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="London Review Bookstore"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/londonreview_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14 Bury Place, London WC1A 2JL"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/star" />

                        <TextView
                            android:id="@+id/londonreview_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5/5"
                            android:textSize="14sp"
                            android:paddingStart="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--        store 5: Daunt Books-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:cardElevation="4dp"
                card_view:cardCornerRadius="12dp"
                android:cardBackgroundColor="#D5FAD7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/dauntbooks_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dauntbooks" />

                    <TextView
                        android:id="@+id/dauntbooks_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daunt Books"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/dauntbooks_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="83-84 Marylebone High Street, Marylebone W1U 4QW"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/star" />

                        <TextView
                            android:id="@+id/dauntbooks_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8/5"
                            android:textSize="14sp"
                            android:paddingStart="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>